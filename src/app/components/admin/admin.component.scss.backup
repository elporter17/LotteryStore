        .sorteo-details {
          display: flex;
          gap: 15px;
          flex-wrap: wrap;
          
          span {
            padding: 4px 8px;
            background: white;
            border-radius: 4px;
            font-size: 0.9rem;
            border: 1px solid #dee2e6;
          }
        }
      }
    }
  }
  
  .movimientos-section {
    .section-header {
      background: linear-gradient(135deg, #17a2b8 0%, #3dc1d3 100%);
    }
  }
  
  .movimientos-list {
    padding: 20px;
    
    .movimiento-header {
      display: grid;
      grid-template-columns: 80px 100px 1fr 120px;
      gap: 15px;
      padding: 10px;
      background: #f8f9fa;
      border-radius: 6px;
      font-weight: 600;
      color: #495057;
      margin-bottom: 10px;
    }
    
    .movimiento-item {
      display: grid;
      grid-template-columns: 80px 100px 1fr 120px;
      gap: 15px;
      padding: 12px 10px;
      border-bottom: 1px solid #dee2e6;
      align-items: center;
      
      &:last-child {
        border-bottom: none;
      }
      
      .col-hora {
        font-family: monospace;
        font-size: 0.9rem;
      }
      
      .col-tipo {
        font-weight: 600;
        padding: 4px 8px;
        border-radius: 4px;
        text-align: center;
        font-size: 0.8rem;
        
        &.text-success {
          background: rgba(40, 167, 69, 0.1);
          color: #28a745;
        }
        
        &.text-danger {
          background: rgba(220, 53, 69, 0.1);
          color: #dc3545;
        }
      }
      
      .col-motivo {
        font-size: 0.9rem;
        color: #6c757d;
      }
      
      .col-monto {
        text-align: right;
        font-weight: 600;
        font-family: monospace;
        
        &.text-success {
          color: #28a745;
        }
        
        &.text-danger {
          color: #dc3545;
        }
      }
    }
  }
  
  .no-movimientos, .no-sorteos-pendientes {
    text-align: center;
    padding: 40px 20px;
    color: #6c757d;
    background: #f8f9fa;
    border-radius: 8px;
    margin: 20px 0;
    
    i {
      font-size: 2rem;
      margin-bottom: 10px;
      color: #28a745;
    }
    
    p {
      margin: 0;
      font-size: 1.1rem;
    }
  }
}

.seleccionar-sucursal-msg {
  text-align: center;
  padding: 60px 20px;
  color: #6c757d;
  
  i {
    font-size: 3rem;
    margin-bottom: 15px;
    color: #3498db;
  }
  
  p {
    font-size: 1.2rem;
    margin: 0;
  }
}

.loading-container {
  text-align: center;
  padding: 40px 20px;
  color: #6c757d;
  
  i {
    font-size: 2rem;
    margin-right: 10px;
    color: #3498db;
  }
}

// Responsive para el modal de cierre de caja
@media (max-width: 768px) {
  .cierre-caja-content {
    .resumen-grid {
      grid-template-columns: 1fr;
    }
    
    .sorteos-pendientes-list {
      .sorteo-details {
        flex-direction: column;
        gap: 8px;
      }
    }
    
    .movimientos-list {
      .movimiento-header,
      .movimiento-item {
        grid-template-columns: 1fr;
        gap: 8px;
        text-align: center;
      }
    }
  }
  
  .seleccion-sucursal-container .row {
    flex-direction: column;
    gap: 15px;
  }
}
